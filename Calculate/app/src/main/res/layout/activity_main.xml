<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.bazz.myapplication.MainActivity"
    android:backgroundTint="#e6d3f2">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/display"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:padding="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="13dp"
        android:paddingRight="0dp"
        android:paddingBottom="13dp"
        android:gravity="right"
        android:text="0"
        android:backgroundTint="#f6e1e1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/sayi_1"
        android:layout_below="@+id/display"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="46dp"
        android:backgroundTint="#e6d3f2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/sayi_2"
        android:layout_alignTop="@+id/sayi_1"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#e6d3f2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/sayi_3"
        android:layout_alignTop="@+id/sayi_2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:backgroundTint="#e6d3f2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/sayi_4"
        android:layout_below="@+id/sayi_1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="#e6d3f2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/sayi_5"
        android:layout_alignTop="@+id/sayi_4"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#e6d3f2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:id="@+id/sayi_6"
        android:layout_alignTop="@+id/sayi_5"
        android:layout_alignLeft="@+id/sayi_3"
        android:layout_alignStart="@+id/sayi_3"
        android:backgroundTint="#e6d3f2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:id="@+id/sayi_7"
        android:layout_below="@+id/sayi_4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="#e6d3f2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:id="@+id/sayi_8"
        android:layout_alignTop="@+id/sayi_7"
        android:layout_alignLeft="@+id/sayi_5"
        android:layout_alignStart="@+id/sayi_5"
        android:backgroundTint="#e6d3f2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:id="@+id/sayi_9"
        android:layout_alignTop="@+id/sayi_8"
        android:layout_alignLeft="@+id/hesapla"
        android:layout_alignStart="@+id/hesapla"
        android:backgroundTint="#e6d3f2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/sayi_0"
        android:layout_alignTop="@+id/sayi_sil"
        android:layout_alignLeft="@+id/sayi_8"
        android:layout_alignStart="@+id/sayi_8"
        android:backgroundTint="#e6d3f2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:id="@+id/sayi_carp"
        android:layout_marginBottom="38dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/sayi_topla"
        android:layout_alignStart="@+id/sayi_topla"
        android:backgroundTint="#e6d3f2" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="/"
        android:id="@+id/sayi_bol"
        android:layout_above="@+id/sayi_carp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/sayi_topla"
        android:layout_alignRight="@+id/sayi_sil"
        android:layout_alignEnd="@+id/sayi_sil"
        android:backgroundTint="#e6d3f2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/sayi_topla"
        android:layout_above="@+id/sayi_carp"
        android:layout_alignRight="@+id/sayi_0"
        android:layout_alignEnd="@+id/sayi_0"
        android:layout_alignLeft="@+id/sayi_0"
        android:layout_alignStart="@+id/sayi_0"
        android:backgroundTint="#e6d3f2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hesapla"
        android:id="@+id/hesapla"
        android:layout_alignTop="@+id/sayi_0"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:backgroundTint="#aa6fec" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/sayi_cikar"
        android:layout_above="@+id/sayi_carp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:backgroundTint="#e6d3f2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
        android:id="@+id/sayi_sil"
        android:layout_below="@+id/sayi_7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="#b5b2cf" />
</RelativeLayout>
