<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/toolbar_template" />

    <TextView
        android:text="GÜNLER"
        android:id="@+id/textView6"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="normal|bold"
        android:layout_marginBottom="10dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:drawableRight="@drawable/logo"
                android:drawableLeft="@drawable/logo"
                android:text="PAZARTESİ"
                android:textSize="16dp"
                android:id="@+id/pazartesiBTN"
                android:layout_margin="10dp"
                style="@android:style/Widget.Button.Inset"
                android:elevation="0dp"></Button>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="58dp"
                android:drawableRight="@drawable/logo"
                android:drawableLeft="@drawable/logo"
                android:text="SALI"
                android:textSize="16dp"
                android:id="@+id/saliBTN"
                android:layout_margin="10dp"
                style="@android:style/Widget.Button.Inset" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:drawableRight="@drawable/logo"
                android:drawableLeft="@drawable/logo"
                android:text="ÇARŞAMBA"
                android:id="@+id/carsambaBTN"
                android:layout_margin="10dp"
                style="@android:style/Widget.Button.Inset"></Button>

            <Button
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:drawableRight="@drawable/logo"
                android:drawableLeft="@drawable/logo"
                android:text="PERŞEMBE"
                android:textSize="16dp"
                android:id="@+id/persembeBTN"
                android:layout_margin="10dp"
                style="@android:style/Widget.Button.Inset"></Button>

            <Button
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:drawableRight="@drawable/logo"
                android:drawableLeft="@drawable/logo"
                android:text="CUMA"
                android:textSize="16dp"
                android:id="@+id/cumaBTN"
                android:layout_marginBottom="5dp"
                android:layout_margin="10dp"
                style="@android:style/Widget.Button.Inset"></Button>

            <Button
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:drawableRight="@drawable/logo"
                android:drawableLeft="@drawable/logo"
                android:text="CUMARTESİ"
                android:textSize="16dp"
                android:id="@+id/cumartesiBTN"
                android:layout_margin="10dp"
                style="@android:style/Widget.Button.Inset"></Button>

            <Button
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:drawableRight="@drawable/logo"
                android:drawableLeft="@drawable/logo"
                android:text="PAZAR"
                android:textSize="16dp"
                android:id="@+id/pazarBTN"
                android:layout_margin="10dp"
                style="@android:style/Widget.Button.Inset"></Button>

        </LinearLayout>

    </ScrollView>
</LinearLayout>