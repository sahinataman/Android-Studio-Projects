<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_gunlerden_pazar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bazz.cevahirevyemekleri.GunlerdenPazarActivity">
    <include layout="@layout/toolbar_template" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp">

        <TextView
            android:text="Pazar Günü Çıkan Yemekler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:textSize="20sp" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/relativeLayout"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="80dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:text="kuru fasulye"
                    android:textSize="16dp"
                    android:background="#660000"
                    android:id="@+id/yemek1"
                    android:layout_marginBottom="5dp"
                    android:elevation="0dp"
                    style="@style/Widget.AppCompat.Button.Colored"></Button>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:text="Tavuk sote"
                    android:textSize="16dp"
                    android:id="@+id/yemek2"
                    android:background="#660000"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:elevation="0dp"
                    style="@style/Widget.AppCompat.Button.Colored"></Button>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:text="Pirinç pilavı"
                    android:textSize="16dp"
                    android:id="@+id/yemek3"
                    android:layout_marginBottom="5dp"
                    android:background="#660000"
                    android:layout_marginTop="5dp"
                    android:elevation="0dp"
                    style="@style/Widget.AppCompat.Button.Colored"></Button>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:text="bulgur pilavı"
                    android:textSize="16dp"
                    android:id="@+id/yemek4"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="#660000"
                    android:elevation="0dp"
                    style="@style/Widget.AppCompat.Button.Colored"></Button>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:text="sosis Sote"
                    android:textSize="16dp"
                    android:id="@+id/yemek6"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="#660000"
                    android:elevation="0dp"
                    style="@style/Widget.AppCompat.Button.Colored"></Button>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:text="nohut"
                    android:textSize="16dp"
                    android:id="@+id/yemek7"
                    android:layout_marginBottom="5dp"
                    android:background="#660000"
                    android:layout_marginTop="5dp"
                    android:elevation="0dp"
                    style="@style/Widget.AppCompat.Button.Colored"></Button>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:text="musakka"
                    android:textSize="16dp"
                    android:id="@+id/yemek8"
                    android:background="#660000"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:elevation="0dp"
                    style="@style/Widget.AppCompat.Button.Colored"></Button>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:text="Fırın makarna"
                    android:textSize="16dp"
                    android:background="#660000"
                    android:id="@+id/yemek9"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:elevation="0dp"
                    style="@style/Widget.AppCompat.Button.Colored"></Button>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:text="püre"
                    android:textSize="16dp"
                    android:background="#660000"
                    android:id="@+id/yemek10"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:elevation="0dp"
                    style="@style/Widget.AppCompat.Button.Colored"></Button>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:text="izmir köfte"
                    android:textSize="16dp"
                    android:id="@+id/yemek11"
                    android:background="#660000"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:elevation="0dp"
                    style="@style/Widget.AppCompat.Button.Colored"></Button>

            </LinearLayout>

        </ScrollView>

        <TextView
            android:text="Cumartesi-Pazar günleri mevcut listeye farklı yemekler ilave edilir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:id="@+id/textView7"
            android:textAlignment="center" />

    </RelativeLayout>
</RelativeLayout>
