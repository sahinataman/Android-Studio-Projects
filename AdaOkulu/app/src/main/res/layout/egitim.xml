<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:clickable="true"
    android:background="#cff3fc"
    android:baselineAligned="false">
    <include
        layout="@layout/template_toolbar"
        android:id="@+id/include6" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="EĞİTİM ANLAYIŞIMIZ"
        android:id="@+id/textView3"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:textColor="#0015ff"
        android:layout_below="@+id/include6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:text="Yaparak ve yaşayarak öğrenen, Meraklı ve ilgili, Farkındalığı ve duyarlılığı gelişmiş, Öğrenmeyi öğrenmiş ve problem çözme becerisi kazanmış, Sorgulayan, araştıran, eleştirel düşünebilen, Yalnızca sonuca değil sürece odaklanan, İşbirliği ve takım çalışmasına yatkın, Özgüveni yüksek ve sorumluluk bilincine sahip, İletişim becerileri gelişmiş, Empati yapabilen, Farklılıklara saygılı, Analitik düşünebilen, Paylaşımcı ve yardımsever, Kendisini, ailesini, ülkesini, insanlığı ve çevreyi seven bireyler yetiştirmek."
        android:textSize="15dp"
        android:textAlignment="center"
        android:layout_below="@+id/textView3"
        android:id="@+id/textView21" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView7"
        android:src="@drawable/egitim_image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:paddingTop="135dp" />

</RelativeLayout>